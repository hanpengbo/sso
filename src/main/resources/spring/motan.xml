<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:motan="http://api.weibo.com/schema/motan"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://api.weibo.com/schema/motan http://api.weibo.com/schema/motan.xsd">

    <!-- zookeeper -->
    <motan:registry regProtocol="zookeeper" name="registry" address="192.168.7.251,192.168.7.252,192.168.7.253:2181"/>
    <!--<motan:registry regProtocol="zookeeper" name="registry" address="10.26.101.12:2181,10.24.196.4:2182,10.44.47.240:2183"/>-->

    <!-- 配置接口调用 -->
    <motan:referer id="employersService"
                   interface="com.lvzheng.jixiang.rpc.api.IEmployersService"
                   group="jixiang" module="jixiang" version="1.0"
                   registry="registry" requestTimeout="5000"/>

</beans>